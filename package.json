{
  "name": "simple-voting-contract",
  "version": "1.0.0",
  "description": "Simple voting contract for real deployment",
  "engines": {
    "node": ">=20",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.1.0"
  },
  "devDependencies": {
    "@fhevm/hardhat-plugin": "0.0.1-3",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "ethers": "^6.14.3",
    "hardhat": "^2.24.3",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "compile": "hardhat compile --config hardhat.config.simple.js",
    "compile:corporate": "hardhat compile --config hardhat.config.corporate.js",
    "deploy": "hardhat run deploy-final.js --config hardhat.config.simple.js --network sepolia",
    "verify": "hardhat verify --config hardhat.config.simple.js --network sepolia",
    "compile:fhe": "cross-env hardhat compile --config hardhat.config.fhe.js",
    "deploy:fhe": "cross-env hardhat run scripts/deploy-fhe.js --config hardhat.config.fhe.js --network zama-devnet",
    "deploy:fhe:corporate": "cross-env hardhat run scripts/deploy-fhe-corporate.js --config hardhat.config.fhe.js --network zama-devnet",
    "deploy:fhe:corporate:local": "cross-env hardhat run scripts/deploy-fhe-corporate.js --config hardhat.config.fhe.js --network localhost",
    "deploy:corporate": "cross-env hardhat run scripts/deploy-corporate-governance.js --config hardhat.config.corporate.js --network localhost",
    "deploy:corporate:sepolia": "cross-env hardhat run scripts/deploy-corporate-governance.js --config hardhat.config.corporate.js --network sepolia",
    "deploy:minimal": "hardhat run scripts/deploy-minimal.js --config hardhat.config.corporate.js --network hardhat",
    "deploy:ultra": "hardhat run scripts/deploy-ultra-simple.js --config hardhat.config.corporate.js --network hardhat",
    "deploy:final": "hardhat run scripts/deploy-final-corporate.js --config hardhat.config.corporate.js --network hardhat",
    "deploy:super": "hardhat run scripts/deploy-super.js --config hardhat.config.corporate.js --network hardhat",
    "deploy:ultimate": "hardhat run scripts/deploy-ultimate.js --config hardhat.config.corporate.js --network hardhat",
    "test:fhe": "cross-env hardhat test --config hardhat.config.fhe.js",
    "test:corporate": "cross-env hardhat run scripts/test-corporate-governance.js --config hardhat.config.corporate.js --network hardhat",
    "serve": "npx http-server . -p 3018 -c-1"
  }
}
